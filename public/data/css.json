            {
                "title": "Infinite Scroll Animation - CSS ONLY",
                "description": "Useful animation.",
                "code": [
                    "<style>",
                    " .carousel { margin: 0 auto; padding: 20px 0; max-width: 700px; overflow: hidden; display: flex;",
                    "  >* { flex: 0 0 100%; }",
                    "  &.scroll { .group { animation: scroll 10s linear infinite; } }",
                    "  &.scroll-inv { .group { animation: scroll-inv 10s linear infinite; } }",
                    "  &:hover { .scroll, .scroll-inv { animation-play-state: paused; } }",
                    " }",
                    " .group { display: flex; gap: 20px; padding-right: 20px; will-change: transform; }",
                    " @keyframes scroll {",
                    "  0% { transform: translateX(0); }",
                    "  100% { transform: translateX(-100%); }",
                    " }",
                    " @keyframes scroll-inv {",
                    " 0% { transform: translateX(-100%); }",
                    " 100% { transform: translateX(0); }",
                    " }",
                    " .card { width: 100%; color: white; border-radius: 24px; box-shadow: rgba(0, 0, 0, 10%) 5px 5px 20px 0; padding: 20px; font-size: xx-large; justify-content: center; align-items: center; min-height: 200px; }",
                    "</style>",
                    "<div class='carousel scroll'>",
                    " <div class='group'> <div class='card'>A</div><div class='card'>B</div><div class='card'>C</div></div>",
                    " <div aria-hidden class='group'><div class='card'>A</div><div class='card'>B</div><div class='card'>C</div></div>",
                    "</div>",
                    "<div class='carousel scroll-inv'>",
                    " <div class='group'><div class='card'>A</div><div class='card'>B</div><div class='card'>C</div></div>",
                    " <div aria-hidden class='group'><div class='card'>A</div><div class='card'>B</div><div class='card'>C</div></div>",
                    "</div>"
                ],
                "tags": [
                    "css",
                    "animation",
                    "infinite scroll",
                    "useful"
                ],
